<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"

        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#323b45"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Username"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/age"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_child_care_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Age"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/loudVoice"
            app:layout_constraintTop_toBottomOf="@+id/age"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/loudVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_surround_sound_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Loud Voice"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/running"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/running"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_directions_run_black_24dp"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Running"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/drowning"
            app:layout_constraintTop_toBottomOf="@+id/loudVoice"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/drowning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_drowning"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Drowning"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/tantrum"
            app:layout_constraintTop_toBottomOf="@+id/running"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/tantrum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:drawableStart="@drawable/ic_tantrum"
            android:drawablePadding="20dp"
            android:drawableTint="@color/icon_color"
            android:hint="Tantrum"
            android:visibility="gone"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/buttonUpdate"
            app:layout_constraintTop_toBottomOf="@+id/drowning"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_light_blue_back"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tantrum"
            tools:layout_editor_absoluteX="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Logout"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:background="?attr/selectableItemBackground"
        />

</androidx.constraintlayout.widget.ConstraintLayout>